<!-- ============================================================
     JAVASCRIPT PARA UX FEATURES
============================================================ -->
<script>
// ============================================================
// 1) SMOOTH SCROLL TO SECTION
// ============================================================
function rsScrollTo(targetId) {
    const element = document.getElementById(targetId);
    if (element) {
        element.scrollIntoView({ 
            behavior: 'smooth', 
            block: 'start' 
        });
    }
}

// ============================================================
// 2) ACTION CHECKLIST CON PROGRESS TRACKING
// ============================================================
let rsCheckedItems = new Set();
const rsTotalItems = <?= count($recommendations) ?>;

function rsToggleCheck(checkbox, index) {
    const item = checkbox.closest('.rs-checklist-item');
    
    if (checkbox.checked) {
        rsCheckedItems.add(index);
        item.classList.add('rs-checked');
    } else {
        rsCheckedItems.delete(index);
        item.classList.remove('rs-checked');
    }
    
    rsUpdateProgress();
    rsSaveProgress();
}

function rsUpdateProgress() {
    const done = rsCheckedItems.size;
    const percent = rsTotalItems > 0 ? Math.round((done / rsTotalItems) * 100) : 0;
    
    // Main progress bar
    const fillEl = document.getElementById('rs-progress-fill');
    const textEl = document.getElementById('rs-progress-text');
    if (fillEl) fillEl.style.width = percent + '%';
    if (textEl) textEl.textContent = percent + '% Complete (' + done + '/' + rsTotalItems + ')';
    
    // Sticky progress
    const stickyPercent = document.getElementById('rs-sticky-percent');
    const stickyDone = document.getElementById('rs-sticky-done');
    if (stickyPercent) stickyPercent.textContent = percent + '%';
    if (stickyDone) stickyDone.textContent = done;
    
    // Show/hide sticky
    const sticky = document.getElementById('rs-sticky-progress');
    if (sticky) {
        if (done > 0) {
            sticky.classList.add('visible');
        } else {
            sticky.classList.remove('visible');
        }
    }
}

// Guardar progreso en localStorage
function rsSaveProgress() {
    try {
        localStorage.setItem('rs_progress', JSON.stringify([...rsCheckedItems]));
    } catch(e) {}
}

// Cargar progreso guardado
function rsLoadProgress() {
    try {
        const saved = localStorage.getItem('rs_progress');
        if (saved) {
            rsCheckedItems = new Set(JSON.parse(saved));
            rsCheckedItems.forEach(index => {
                const checkbox = document.getElementById('rs-check-' + index);
                if (checkbox) {
                    checkbox.checked = true;
                    checkbox.closest('.rs-checklist-item').classList.add('rs-checked');
                }
            });
            rsUpdateProgress();
        }
    } catch(e) {}
}

// ============================================================
// 3) PRIORITY-BASED SORTING
// ============================================================
let rsCurrentSort = 'category';

function rsSortBy(mode) {
    rsCurrentSort = mode;
    
    // Update button states
    document.querySelectorAll('.rs-sort-btn').forEach(btn => btn.classList.remove('active'));
    document.getElementById('sort-' + mode).classList.add('active');
    
    const container = document.getElementById('rs-recommendations-container');
    if (!container) return;
    
    if (mode === 'category') {
        // Restore original category grouping
        const groups = Array.from(container.querySelectorAll('.rs-category-group'));
        groups.forEach(group => {
            group.style.display = 'block';
            const header = group.querySelector('.rs-rec-category');
            if (header) header.style.display = 'block';
            const items = Array.from(group.querySelectorAll('.rs-rec-item'));
            items.forEach(item => item.style.display = 'flex');
        });
    } else if (mode === 'severity') {
        // Hide all category headers except first
        const groups = Array.from(container.querySelectorAll('.rs-category-group'));
        groups.forEach((group, idx) => {
            const header = group.querySelector('.rs-rec-category');
            if (header && idx > 0) header.style.display = 'none';
            if (idx > 0) group.style.display = 'none';
        });
        
        // Get all items and sort by severity
        const allItems = Array.from(container.querySelectorAll('.rs-rec-item'));
        allItems.sort((a, b) => {
            const orderA = parseInt(a.dataset.sevOrder) || 99;
            const orderB = parseInt(b.dataset.sevOrder) || 99;
            return orderA - orderB;
        });
        
        // Re-append in sorted order to first group
        const firstGroup = container.querySelector('.rs-category-group');
        if (firstGroup) {
            // Change header text
            const header = firstGroup.querySelector('.rs-rec-category');
            if (header) {
                header.textContent = 'üî• Sorted by Priority';
                header.style.display = 'block';
            }
            allItems.forEach(item => firstGroup.appendChild(item));
        }
    }
}

// ============================================================
// 4) ANIMACI√ìN DE SCORE BARS AL CARGAR
// ============================================================
function rsAnimateBars() {
    setTimeout(() => {
        document.querySelectorAll('.rs-score-fill').forEach(bar => {
            bar.classList.add('rs-animate');
        });
    }, 100);
}

// ============================================================
// INIT
// ============================================================
document.addEventListener('DOMContentLoaded', function() {
    rsLoadProgress();
    rsAnimateBars();
});
</script>

<?php
    return ob_get_clean();
}
