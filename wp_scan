<?php
/* ============================================================
   RooSecure Premium ‚Äî OPTIMIZED VERSION con UX MEJORADO (2025)
   - Action Checklist con progreso
   - Smooth Scroll to Section
   - Priority-Based Sorting
============================================================ */

function roosecure_render_results_pre($data) {

    // ============================================================
    // 1) SANITIZACI√ìN DE DATOS
    // ============================================================
    $data['ssl']       = $data['ssl'] ?? ['domain'=>'','issuer'=>'','protocol'=>'unknown','cipher'=>'unknown','expired'=>false,'days_left'=>0,'chain'=>false,'valid_from'=>'','valid_to'=>''];
    $data['headers']   = $data['headers'] ?? ['details'=>'No header data','issues'=>[]];
    $data['malware']   = $data['malware'] ?? null;
    $data['wp_risk']   = $data['wp_risk'] ?? ['is_wp'=>false,'score'=>100,'details'=>'No WP scan','issues'=>[]];
    $data['tech']      = $data['tech'] ?? ['score'=>100,'server'=>'Unknown','cdn'=>'None','waf'=>'None','hosting'=>'Unknown','compression'=>'Unknown','details'=>'','issues'=>[]];
    $data['exposure']  = $data['exposure'] ?? ['score'=>100,'issues'=>[],'details'=>'No exposure data'];
    $data['redirects'] = $data['redirects'] ?? ['score'=>100,'hops'=>[],'issues'=>[],'details'=>'No redirect data'];

    $ssl = $data['ssl'];

    // ============================================================
    // 2) C√ÅLCULO DE SCORES
    // ============================================================
    
    // SSL Score
    $ssl_score = 100;
    if ($ssl['expired'])                $ssl_score -= 40;
    if ($ssl['days_left'] < 30)         $ssl_score -= 20;
    if ($ssl['protocol'] === 'unknown') $ssl_score -= 20;
    if ($ssl['cipher'] === 'unknown')   $ssl_score -= 20;
    $ssl_score = max(0, $ssl_score);

    $ssl_color = ($ssl_score >= 75) ? "#16a34a" : (($ssl_score >= 50) ? "#f59e0b" : (($ssl_score >= 30) ? "#f97316" : "#ef4444"));

    // Overall Score & Recommendations
    $rules = roosecure_rules_pre();
    $evaluation = roosecure_evaluate_rules($data, $rules);
    $overallScore = $evaluation['score'];
    $recommendations = $evaluation['recommendations'];

    // ============================================================
    // 3) FUNCIONES AUXILIARES
    // ============================================================
    
    // Funci√≥n para determinar el estado de un m√≥dulo
    function rs_module_status($score) {
        if ($score >= 85) return ["OK", "rs-status-ok"];
        if ($score >= 60) return ["Review", "rs-status-warn"];
        return ["Risk", "rs-status-danger"];
    }

    // Funci√≥n para obtener color seg√∫n score
    function rs_score_color($score) {
        return ($score >= 75) ? "#16a34a" : (($score >= 50) ? "#f59e0b" : (($score >= 30) ? "#f97316" : "#ef4444"));
    }

    // ============================================================
    // 4) PREPARACI√ìN DE DATOS PARA DASHBOARD
    // ============================================================
    
    // Estado general
    if ($overallScore >= 85) {
        $overall_label = "Secure";
        $overall_color = "#16a34a";
        $overall_text = "Your website shows a strong security posture with no critical risks detected.";
    } elseif ($overallScore >= 65) {
        $overall_label = "Needs Attention";
        $overall_color = "#f59e0b";
        $overall_text = "Some security areas require attention, but no immediate critical threats were detected.";
    } else {
        $overall_label = "Security Risk Detected";
        $overall_color = "#ef4444";
        $overall_text = "Multiple security issues were identified that may affect trust, safety or visibility.";
    }

    // M√≥dulos y sus scores
    $modules = [
        "SSL / TLS" => ["score" => $ssl_score],
        "Security Headers" => ["score" => empty($data['headers']['issues']) ? 100 : 40],
        "Malware & Blacklist" => ["score" => empty($data['malware']['malware']) && empty($data['malware']['phishing']) && empty($data['malware']['blacklist']) ? 100 : $data['malware']['score']],
        "WordPress" => ["score" => $data['wp_risk']['score']],
        "Exposure" => ["score" => $data['exposure']['score']],
        "Redirects" => ["score" => $data['redirects']['score']],
    ];

    // Resumen de issues para KPI flip card
    $issueSummary = [];
    if (!empty($data['headers']['issues'])) $issueSummary['Security Headers'] = count($data['headers']['issues']);
    if (!empty($data['wp_risk']['issues'])) $issueSummary['WordPress'] = count($data['wp_risk']['issues']);
    if (!empty($data['exposure']['issues'])) $issueSummary['Exposure'] = count($data['exposure']['issues']);
    if (!empty($data['redirects']['issues'])) $issueSummary['Redirects'] = count($data['redirects']['issues']);
    
    $malwareCount = 0;
    if (!empty($data['malware']['malware'])) $malwareCount++;
    if (!empty($data['malware']['phishing'])) $malwareCount++;
    if (!empty($data['malware']['blacklist'])) $malwareCount++;
    if ($malwareCount > 0) $issueSummary['Malware & Blacklist'] = $malwareCount;

    $totalIssues = array_sum($issueSummary);
    arsort($issueSummary);
    $visibleIssues = array_slice($issueSummary, 0, 5, true);
    $hiddenCount = max(0, count($issueSummary) - 5);

    ob_start();
?>

