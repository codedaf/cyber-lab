                            if ($rec["severity"] === "critical") { $sevClass = "rs-rec--critical"; $sevOrder = 1; }
                            if ($rec["severity"] === "high") { $sevClass = "rs-rec--high"; $sevOrder = 2; }
                            if ($rec["severity"] === "medium") { $sevClass = "rs-rec--medium"; $sevOrder = 3; }
                            if ($rec["severity"] === "low") { $sevClass = "rs-rec--low"; $sevOrder = 4; }
                        ?>
                        
                        <div class="rs-rec-item <?= $sevClass ?> rs-checklist-item" 
                             data-severity="<?= $rec['severity'] ?>" 
