    </div>
</div>

<!-- ============================================================
     WRAPPER PRINCIPAL
============================================================ -->
<div class="rs-wrapper">

<!-- Security Headers -->
<div class="rs-card rs-sec-headers" id="rs-sec-headers">
    <div class="rs-section-header">
        <h3 class="rs-section-title">üõ°Ô∏è Security Headers Protection</h3>
        <p class="rs-section-subtitle">Browser-level security protections</p>
    </div>
    <?php $issues_count = !empty($data['headers']['issues']) ? count($data['headers']['issues']) : 0; ?>
    <?php if ($issues_count > 0): ?>
        <div class="rs-group">
            <p><strong>‚ö†Ô∏è Protection status:</strong> Attention required</p>
            <p>Your website is missing some important browser security protections.</p>
        </div>
    <?php else: ?>
        <div class="rs-group">
            <p><strong>‚úÖ Protection status:</strong> Fully protected</p>
            <p>All recommended security headers are correctly configured.</p>
        </div>
    <?php endif; ?>
</div>

<!-- Malware & Blacklist -->
<?php if ($data['malware']): 
    $mal = $data['malware'];
    $mal_color = rs_score_color($mal['score']);
    $hasIssues = !empty($mal['malware']) || !empty($mal['phishing']) || !empty($mal['blacklist']);
?>
