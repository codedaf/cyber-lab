    }

    // ğŸ”¹ Limpieza de saltos de lÃ­nea
    $resultado_limpio = nl2br(esc_html($GLOBALS['resultado_scan']));

    // ğŸ”¹ ReducciÃ³n de espacios entre lÃ­neas (CSS + line-height)
    return "
    <div style='
        display:flex;
        justify-content:center;
